<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%thread] %highlight(%-5level) %cyan(%logger{15}) - %msg %n</pattern>
        </encoder>
    </appender>

    <logger level="INFO" name="com.worekleszczy"/>
    <root level="WARN">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>